%h1 {{instrument.displayName}}
%p
  pip: {{instrument.pip}}
%p
  maximum tradeable units: {{instrument.maxTradeUnits}}

%h1 Signals
%p
  ADR: {{signals.adr.value}}
%p
  RSI: {{signals.rsi.value}}
%p
  stoch: {{signals.stoch.value}}
%p
  ema5 ema10: {{signals.ema5ema10.value}}

%h1 Plots
.row
  .col-md-6
    %h2 candles with exponential moving averages 5 and 10
    %d3-candlestick{candles: "candles", ema5: "ema5", ema10: "ema10"}

.row
  .col-md-6
    %h2 average daily range
    %d3-line-threshold{line: "adr", threshold: "[100]"}

.row
  .col-md-6
    %h2 stochastic oscillator
    %d3-line-threshold{line: "stoch", threshold: "[0.20, 0.80]", min: 0, max: 1}

.row
  .col-md-6
    %h2 relative strength index
    %d3-line-threshold{line: "rsi", threshold: "[30, 50, 70]", min: 0, max: 100}
